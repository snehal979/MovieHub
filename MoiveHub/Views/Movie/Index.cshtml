@model IEnumerable<Movie>
@{
    ViewData["Title"] = "List Of Movie";
}

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-5 border-primary ">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.MovieName   
                                    <a class="text-white float-left" asp-action="Edit" asp-route-id="@item.Id"><i class="bg-info bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.MovieUrl" width="100%" alt="@item.MovieName">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">Description</p>
                            <p class="card-text"><b>Cinema: </b>@item.Cinema.CinemaName</p>
                            <p class="card-text"><b>Category: </b>@item.MovieCatogory</p>
                            <p class="card-text"><b>Start Date: </b>@item.StartDate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date: </b>@item.EndDate.ToString("dd MMM yy")</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (DateTime.Now >=item.StartDate && DateTime.Now <= item.EndDate)
                                {
                                    <span class="badge bg-success text-white">Available</span>
                                }
                                else if (DateTime.Now > item.EndDate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                } 
                                else
                                {
                                   <span class="badge bg-primary text-white">UpComing</span>
                                }

                            </p>


                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-success text-white ">
                                    <i class="bi bi-cart-plus"></i> Add to Cart(@item.Prize.ToString("c"))</a>
                                <a class="btn btn-outline-primary float-right" asp-action="Detail"asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                              
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div style="position:fixed;right:25px;bottom:25px" class="text-white">
    <a asp-controller="Movie" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"><h4>AddNew</h4></i>

    </a>

</div>

