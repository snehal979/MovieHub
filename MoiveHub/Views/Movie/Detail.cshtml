@model Movie

@{
    ViewData["Title"] = "Movie details";
}

<div class="col-md-4 col-xs-5 border-primary ">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-12" readonly>
                <div class="card-header text-white bg-info">
                    <p class="card-text">
                        <h5 class="card-title">
                            @Model.MovieName
                            <a class="text-white float-left"><i class="bg-info bi-pencil-square"></i></a>
                        </h5>
                    </p>
                </div>
            </div>
            <div class="col-md-6" readonly>
                <img src="@Model.MovieUrl" width="100%" alt="@Model.MovieName">
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">
                        <b>Cinema: </b>
                        <a asp-controller="Cinemas" asp-action="Detail" asp-route-id="@Model.CinemaId">
                            @Model.Cinema.CinemaName
                        </a>
                    </p>
                    <p class="card-text">
                        <b>Producer: </b>
                        <a asp-controller="Producers" asp-action="Detail" asp-route-id="@Model.ProducerId">
                            @Model.Producer.ProducerName
                        </a>
                    </p>
                    <p class="card-text"><b>Category: </b>@Model.MovieCatogory</p>
                    <p class="card-text"><b>Start Date: </b>@Model.StartDate.ToString("dd MMM yy")</p>
                    <p class="card-text"><b>End Date: </b>@Model.EndDate.ToString("dd MMM yy")</p>
                    <p class="card-text ">
                        <b>Status: </b>
                        @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)
                        {
                            <span class="badge bg-success text-white">AVAILABLE</span>
                        }
                        else if (DateTime.Now > Model.EndDate)
                        {
                            <span class="badge bg-danger text-white">EXPIRED</span>
                        }
                        else
                        {
                            <span class="badge bg-primary text-white">UPCOMING</span>
                        }
                    </p>
                    <p class="card-text">
                        <b>Actors: </b>
                        <hr />
                        <div class="row">
                            @foreach (var actor in Model.Actor_Movies)
                            {
                                <div class="column text-center">
                                    <img class="border-info rounded-circle" src="@actor.Actor.ActorUrl" style="max-width: 150px" />
                                    <br />
                                    <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.ActorId">@actor.Actor.ActorName</a>
                                </div>
                            }
                        </div>
                    </p>

                </div>
            </div>
            <div class="col-md-12">
                <div class="card-footer">
                    <p class="card-text">
                        <a class="btn btn-outline-primary float-right" asp-action="Index">
                            Back to List
                        </a>
                        <a class="btn btn-success text-white  @((DateTime.Now > Model.EndDate) ? "disabled" : "")"
                           asp-controller="Orders"
                           asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id">
                            <i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Prize.ToString("c"))
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $("#MovieUrl").on("change", function () {
            var output = document.getElementById('MovieUrlpre');
            output.src = $(this).val();
        })
    </script>
}
<style>
    .form-group {
        margin: 10px 10px
    }
</style>




























