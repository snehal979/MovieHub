@model Producer

@{
    ViewData["Title"] = "Detail of the Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detail for @Model.ProducerName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group">

                    <img id="ProducerUrlpre" class="border-info rounded-circle" style="max-width: 150px" />

                </div>
                <div class="form-group">
                    <lable asp-for="ProducerUrl" class="control-label">ProducerUrl</lable>
                    <input asp-for="ProducerUrl" class="form-control" />
                    <span asp-validation-for="ProducerUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <lable asp-for="ProducerName" class="control-label">ProducerName</lable>
                    <input asp-for="ProducerName" class="form-control" />
                    <span asp-validation-for="ProducerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <lable asp-for="Bio" class="control-label">Bio</lable>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProducerUrlPre');
            output.src = $("#ProducerUrl").val();
        })
    </script>
}
  