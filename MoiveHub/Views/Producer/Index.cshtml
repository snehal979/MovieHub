
@model IEnumerable<Producer>
@{
    ViewData["Title"] = "List Of Producer";
}
<div class="row">
    <div class="col-md-9 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(mode =>mode.ProducerUrl)
                    </th>
                    <th>
                        @Html.DisplayNameFor(mode =>mode.ProducerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(mode =>mode.Bio)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProducerUrl" alt="@item.ProducerName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProducerName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<div style="position:fixed;right:25px;bottom:25px" class="text-white">
    <a asp-controller="Producer" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"><h4>AddNew</h4></i>

    </a>

</div>

