@model Producer

@{
    ViewData["Title"] = "Update Producer";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Producer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">

                        <img id="ProducerUrlpre" class="border-info rounded-circle" style="max-width: 150px" />

                    </div>
                    <div class="form-group">
                        <lable asp-for="ProducerUrl" class="control-label">ProducerUrl</lable>
                        <input asp-for="ProducerUrl" class="form-control" />
                        <span asp-validation-for="ProducerUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <lable asp-for="ProducerName" class="control-label">ProducerName</lable>
                        <input asp-for="ProducerName" class="form-control" />
                        <span asp-validation-for="ProducerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <lable asp-for="Bio" class="control-label">Bio</lable>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProducerUrlpre');
            output.src = $("#ProducerUrl").val();
        })

        $("#ProducerUrl").on("change", function () {
            var output = document.getElementById('ProducerUrlpre');
            output.src = $(this).val();
        })
    </script>
};
